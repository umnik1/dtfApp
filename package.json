{
    "name": "dtfapp",
    "version": "1.0.0",
    "description": "DTF Windows Client",
    "main": "main.js",
    "author": "Maksim Chingin",
    "license": "MIT",
    "devDependencies": {
        "electron": "^13.1.9",
        "electron-installer-windows": "^3.0.0",
        "electron-packager": "^15.4.0"
    },
    "scripts": {
        "start": "electron .",
        "build": "electron-packager . dtfApp --platform win32 --arch x64 --out dist/ --icon=./icon.png",
        "setup": "electron-installer-windows --src dist/dtfApp-win32-x64/ --dest dist/installers/ --icon=./icon.png"
    },
    "dependencies": {
        "@cliqz/adblocker-electron": "^1.22.5",
        "@electron/remote": "^1.2.1",
        "axios": "^0.21.1",
        "cross-fetch": "^3.1.4",
        "electron-context-menu": "^3.1.1"
    }
}
